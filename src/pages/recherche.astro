---
import Layout from '~/layouts/Layout.astro';

const query = Astro.url.searchParams.get('q') || '';

const metadata = {
  title: `Recherche: ${query}`,
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
      <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
        Résultats de recherche
      </h1>
      {query && (
        <p class="text-xl text-gray-600 dark:text-gray-400">
          Résultats pour : "{query}"
        </p>
      )}
    </div>
    <div class="flex flex-col gap-4">
      <!-- Ici vous pouvez ajouter la logique de recherche et l'affichage des résultats -->
      <div id="search-results"></div>
      <script type="module" src="/search-results.js"></script>
    </div>
  </section>
</Layout> 